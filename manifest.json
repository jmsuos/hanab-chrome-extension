{
  "manifest_version": 3,
  "name": "Hanab",
  "version": "1.1.0",
  "description": "Hanab Chrome Extension for enhancing Mendix and WOW.",
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://vwtworkflow.mendixcloud.com/*",
    "https://mijn.wowportaal.nl/*"
  ],
  "action": {
    "default_title": "Open Hanab Side Panel"
  },
  "side_panel": {
    "default_path": "mendix.html"
  },
  "content_scripts": [
    {
      "matches": ["https://vwtworkflow.mendixcloud.com/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["sidePanel", "tabs", "scripting"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}
